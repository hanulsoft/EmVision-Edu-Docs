{
  "editor.wordWrap": "off",
  "prettier.printWidth": 120,
  "markdownlint.config": {
    "MD025": false,
    "MD033": false,
    "MD041": false
  },
  "files.associations": {
    "*.html": "liquid",
    "*.json.liquid": "json",
    "*.yaml.liquid": "yaml",
    "*.md.liquid": "markdown",
    "*.js.liquid": "liquid-javascript",
    "*.css.liquid": "liquid-css",
    "*.scss.liquid": "liquid-scss"
  },
  "[typescript]": {
    "editor.wordWrap": "wordWrapColumn",
    "editor.wordWrapColumn": 120
  }
}
